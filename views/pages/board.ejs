<%- include ../partials/head %> <%- include ../partials/header %> <%- include
../partials/sidebar-left %>
<style>
  h3.subtitle {
    text-align: center;
    width: 100%;
    color: gray;
    font-size: 14px;
    background: white;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    margin-bottom: -6px;
  }
</style>
<div class="page-content">
  <div class="container">
    <div class="newsfeed-banner">
      <div class="media">
        <div class="item-icon">
          <i class="icofont-dashboard-web"></i>
        </div>
        <div class="media-body">
          <h3 class="item-title">MIS TAREAS</h3>
          <p>Seguimiento para tus tareas pendientes, en progreso y finalizadas</p>
        </div>
      </div>
    </div>
    <%- include ../partials/post %>
    <div class="realated-blog">
      <div class="row">
        <div class="col-lg-4">
          <h3 class="subtitle">Pendientes</h3>
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="0"
                class="active"
              ></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%- include('../partials/task',{status:1}) %>
              </div>
              <div class="carousel-item">
                <%- include('../partials/task',{status:1}) %>
              </div>
              <div class="carousel-item">
                <%- include('../partials/task',{status:1}) %>
              </div>
            </div>
            <a
              class="carousel-control-prev"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="prev"
            >
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="carousel-control-next"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="next"
            >
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <div class="col-lg-4">
          <h3 class="subtitle">En progreso</h3>
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="0"
                class="active"
              ></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%- include('../partials/task',{status:2}) %>
              </div>
              <div class="carousel-item">
                <%- include('../partials/task',{status:2}) %>
              </div>
              <div class="carousel-item">
                <%- include('../partials/task',{status:2}) %>
              </div>
            </div>
            <a
              class="carousel-control-prev"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="prev"
            >
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="carousel-control-next"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="next"
            >
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <div class="col-lg-4">
          <h3 class="subtitle">Finalizadas</h3>
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="0"
                class="active"
              ></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%- include('../partials/task',{status:3}) %>
              </div>
              <div class="carousel-item">
                <%- include('../partials/task',{status:3}) %>
              </div>
              <div class="carousel-item">
                <%- include('../partials/task',{status:3}) %>
              </div>
            </div>
            <a
              class="carousel-control-prev"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="prev"
            >
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="carousel-control-next"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="next"
            >
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include ../partials/footer %>
</div>
<%- include ../partials/chat %> <%- include ../partials/eof %>
<script>
  function openChat() {
    $("#chat-box-modal").toggleClass("modal-show");

    setTimeout(function () {
      $("#chat-box-modal").removeClass("shrink");
    }, 300);
  }
</script>
